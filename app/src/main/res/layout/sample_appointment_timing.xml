<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_Small"
    android:layout_marginBottom="@dimen/margin_Large"
    android:orientation="vertical">

    <!--Chamber-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appointment.ChamberAddress.Tv"
            android:layout_weight="1"
            android:layout_width="0dp"
            style="@style/TitleTvStyle"
            android:layout_marginEnd="@dimen/margin_Default"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/oxanium_semi_bold"
            android:textSize="@dimen/text_Size_Small"
            tools:text="2nd Floor, Nur Shopping Complex, Bandartila, Chittagong 4100" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/appointment.Remove.Button"
            android:layout_width="@dimen/icon_Size_Default"
            android:layout_height="@dimen/icon_Size_Default"
            android:background="@drawable/shape_round"
            android:backgroundTint="@color/colorTransRed"
            android:adjustViewBounds="true"
            android:tint="@color/icon_Color_Red"
            app:srcCompat="@drawable/ic_delete"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appointment.Set.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_set_appointment"
            app:drawableTint="@color/colorBlue"
            android:drawablePadding="@dimen/padding_Small"
            android:paddingStart="@dimen/padding_Default"
            android:paddingTop="@dimen/padding_Small"
            android:paddingBottom="@dimen/padding_Small"
            android:paddingEnd="@dimen/padding_Default"
            android:background="@drawable/shape_large_curve"
            android:backgroundTint="@color/colorTransBlue"
            android:text="@string/set"
            android:textSize="@dimen/text_Size_XX_Small"
            android:textColor="@color/colorBlue"
            android:fontFamily="@font/oxanium_semi_bold" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--Assistant Info-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/appointment.Assistant.Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_Small"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TitleTvStyle"
            android:layout_marginTop="@dimen/margin_X_Small"
            android:layout_marginBottom="@dimen/margin_X_Small"
            android:text="@string/assistant"
            android:textSize="@dimen/text_Size_X_Small"
            android:fontFamily="@font/oxanium_semi_bold"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appointment.AssistantInfo.Tv"
            style="@style/TitleTvStyle"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            tools:text="Mr. Assistant (+8801842648201)"
            android:textSize="@dimen/text_Size_XX_Small"
            android:textColor="@color/font_Color_Gray"
            android:fontFamily="@font/oxanium_regular"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--Timings-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_Small"
        android:layout_marginBottom="@dimen/margin_X_Small"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TitleTvStyle"
            android:layout_marginTop="@dimen/margin_X_Small"
            android:layout_marginBottom="@dimen/margin_X_Small"
            android:text="@string/timings"
            android:textSize="@dimen/text_Size_X_Small"
            android:fontFamily="@font/oxanium_semi_bold"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appointment.Timings.Tv"
            style="@style/TitleTvStyle"
            android:layout_marginBottom="0dp"
            tools:text="Sat - Mon (10:30 AM - 12:00 PM)"
            android:lineSpacingExtra="@dimen/margin_X_Small"
            android:textSize="@dimen/text_Size_XX_Small"
            android:textColor="@color/font_Color_Gray"
            android:fontFamily="@font/oxanium_regular"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>